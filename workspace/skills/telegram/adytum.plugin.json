{
  "id": "telegram",
  "name": "Telegram",
  "description": "Telegram bot integration for communication and status notifications.",
  "version": "0.1.0",
  "configSchema": {
    "type": "object",
    "properties": {
      "enabled": { "type": "boolean", "default": true },
      "botToken": { "type": "string" },
      "tokenEnv": { "type": "string", "default": "ADYTUM_TELEGRAM_BOT_TOKEN" },
      "defaultChatId": { "type": "string" },
      "defaultChatIdEnv": { "type": "string", "default": "ADYTUM_TELEGRAM_DEFAULT_CHAT_ID" },
      "allowedChatIds": { "type": "array", "items": { "type": "string" }, "default": [] },
      "listenIncoming": { "type": "boolean", "default": true },
      "respondToMentionsOnly": { "type": "boolean", "default": false },
      "outboundReplyPrefix": { "type": "string", "default": "" },
      "actionPermissions": {
        "type": "object",
        "properties": {
          "send_message": { "type": "boolean", "default": true },
          "read_messages": { "type": "boolean", "default": true },
          "react": { "type": "boolean", "default": true },
          "pin_message": { "type": "boolean", "default": true }
        }
      }
    }
  }
}
