      "tokenUrl": { "type": "string", "default": "https://oauth2.googleapis.com/token" },
      "gmailBaseUrl": { "type": "string", "default": "https://gmail.googleapis.com/gmail/v1" },
      "calendarBaseUrl": { "type": "string", "default": "https://www.googleapis.com/calendar/v3" },
      "defaultCalendarId": { "type": "string", "default": "primary" },
      "defaultTimezone": { "type": "string", "default": "UTC" },
      "defaultUnreadQuery": { "type": "string", "default": "in:inbox is:unread newer_than:7d" },
