{
  "id": "email-calendar",
  "name": "Email + Calendar",
  "description": "Unified Gmail + Google Calendar skill for inbox triage, event management, and cross-domain planning.",
  "metadata": {
    "communication": true
  },
  "configSchema": {
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "enabled": { "type": "boolean", "default": true },
      "provider": { "type": "string", "enum": ["google"], "default": "google" },
      "accessToken": { "type": "string" },
      "accessTokenEnv": { "type": "string", "default": "ADYTUM_EMAIL_CALENDAR_ACCESS_TOKEN" },
